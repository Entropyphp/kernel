{
    "name": "entropyphp/kernel",
    "description": "Kernel for Framework EntropyPHP",
    "type": "pg-module",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Entropy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Entropy\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2 || ^8.3 || ^8.4",
	    "entropyphp/core-interfaces": "^0.1",
	  	"entropyphp/module": "^1.0",
	  	"entropyphp/event": "^0.1",
        "entropyphp/eventdispacher": "^1.0",
        "php-di/php-di": "^7.0",
        "php-di/invoker": "^2.2",
        "psr/container": "^1.0 || ^2.0",
        "psr/http-server-middleware": "^1.0",
        "guzzlehttp/psr7": "^2.7",
        "entropyphp/utils": "^0.1",
        "willy68/pg-middleware-stack": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5 || 11.5 || 12.5",
        "squizlabs/php_codesniffer": "^3.13",
        "symfony/var-dumper": "^7.3"
    },
    "authors": [
        {
            "name": "willy",
            "email": "william.lety@gmail.com"
        }
    ],
    "scripts": {
        "coverage": [
            "php -dxdebug.mode=coverage ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"
        ],
        "tests": ["php ./vendor/bin/phpunit"]
    }
}
